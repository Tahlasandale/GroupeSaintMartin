
/**
 * @fileoverview Firestore Security Rules for AuthZen application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that users can only
 * access their own data. All data is nested under /users/{userId}, providing
 * a clear and secure data hierarchy.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, including an isAdmin flag.
 * - /users/{userId}/dashboards/{dashboardId}: Stores dashboards owned by the user.
 * - /pre-registrations/{preRegistrationId}: Stores emails from the pre-registration form.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user document and their dashboards.
 * - The `isAdmin` flag is read-only for clients and can only be changed from the server-side.
 * - Listing all users is disallowed to protect user privacy.
 * - Anyone can write to the pre-registrations collection, but only admins can read from it.
 *
 * Denormalization for Authorization:
 * - The `Dashboard` entity contains a `userId` field, denormalizing the ownership
 *   relationship. This allows for efficient authorization checks without needing
 *   to perform additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces that only the authenticated user can manage their own user document.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own user document. `isAdmin` defaults to false.
     * @allow (get) - Authenticated user reads their own user document.
     * @allow (update) - Authenticated user updates their own user document, but cannot change `isAdmin`.
     * @allow (delete) - Authenticated user deletes their own user document.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId && request.resource.data.isAdmin == false;
      allow update: if isUpdatingOwnProfileSafely(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces that only the authenticated user can manage their own dashboards.
     * @path /users/{userId}/dashboards/{dashboardId}
     * @allow (create) - Authenticated user creates a dashboard under their user document.
     * @allow (get) - Authenticated user reads a dashboard under their user document.
     * @allow (update) - Authenticated user updates a dashboard under their user document.
     * @allow (delete) - Authenticated user deletes a dashboard under their user document.
     */
    match /users/{userId}/dashboards/{dashboardId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows public write access for pre-registration emails, but only allows admins to read.
     * @path /pre-registrations/{preRegistrationId}
     * @allow (list, get) - Only signed-in users can read the pre-registration entries.
     * @allow (update, delete) - No one can update or delete pre-registration entries.
     * @allow (create) - if isValidPreRegistrationRequest();
     */
    match /pre-registrations/{preRegistrationId} {
      allow list, get: if isSignedIn();
      allow update, delete: if false;
      allow create: if isValidPreRegistrationRequest();
    }
  }

  // --- Helper Functions ---

  /**
   * @description Checks if the user is signed in.
   * @returns {boolean} True if the user is signed in, false otherwise.
   */
  function isSignedIn() {
    return request.auth != null;
  }

  /**
   * @description Checks if the authenticated user is the owner of the resource.
   * @param {string} userId The user ID to check against.
   * @returns {boolean} True if the user is the owner, false otherwise.
   */
  function isOwner(userId) {
    return request.auth.uid == userId;
  }
  
  /**
   * @description Validates a safe profile update by ensuring the user is the owner
   * and is not attempting to change the 'isAdmin' status.
   * @param {string} userId - The user's ID.
   * @returns {boolean} True if the update is safe.
   */
  function isUpdatingOwnProfileSafely(userId) {
    let isOwner = request.auth.uid == userId;
    let isChangingAdminStatus = request.resource.data.isAdmin != resource.data.isAdmin;
    return isOwner && !isChangingAdminStatus;
  }

  /**
   * @description Checks if the authenticated user is an administrator.
   * @returns {boolean} True if the user is an admin, false otherwise.
   */
  function isAdmin() {
    return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
  }

  /**
   * @description Checks if the authenticated user is the owner of the resource and the resource exists.
   * @param {string} userId The user ID to check against.
   * @returns {boolean} True if the user is the owner and the resource exists, false otherwise.
   *
   */
  function isExistingOwner(userId) {
    return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
  }

  /**
   * @description Validates the data for a new pre-registration entry.
   * @returns {boolean} True if the request is valid, false otherwise.
   */
  function isValidPreRegistrationRequest() {
    let hasOnlyAllowedKeys = request.resource.data.keys().hasOnly(['email', 'createdAt']);
    let isEmailString = request.resource.data.email is string;
    let isCreatedAtString = request.resource.data.createdAt is string;

    return hasOnlyAllowedKeys && isEmailString && isCreatedAtString;
  }
}
